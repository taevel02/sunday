{
  "name": "sunday",
  "version": "0.2",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*' -e ts --exec ts-node -r dotenv/config src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node -r dotenv/config dist/src/index.js",
    "start:pm2": "NODE_ENV=production pm2 start dist/src/index.js --name sunday",
    "stop:pm2": "pm2 stop sunday",
    "lint:fix": "prettier --write . && eslint --fix",
    "lint": "prettier --check . && eslint",
    "test": "jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "axios-retry": "^3.9.1",
    "dayjs": "^1.11.10",
    "evernote": "^2.0.5",
    "telegraf": "^4.15.2"
  },
  "devDependencies": {
    "@types/evernote": "^2.0.5",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.1",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
